<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundTint="#FFFFFF"
            tools:context=".MainActivity">



        <Button
            android:id="@+id/backButton"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="@drawable/back_background"
            android:drawableLeft="?attr/actionModeCloseDrawable"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:padding="8dp"
            android:text=""
            app:layout_constraintBottom_toTopOf="@+id/cardViewCotecia"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.24" />

            <RelativeLayout
                android:id="@+id/button6_layout"
                android:layout_width="128dp"
                android:layout_height="181dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/back_background_blue"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/icons_server_rack" />

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="Dados da aplicação"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtitle_text"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text"
                    android:layout_centerHorizontal="true"
                    android:text="Faixa, razão e velocidad"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/button5"
                android:layout_width="128dp"
                android:layout_height="181dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/back_background_pink"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button4"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.21">

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/icon_lapiz" />

                <TextView
                    android:id="@+id/title_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="Dados da aplicação"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subtitle_text3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text3"
                    android:layout_centerHorizontal="true"
                    android:text="Faixa, razão e velocidad"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCotecia"
            android:layout_width="546dp"
            android:layout_height="205dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.148">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imagetrichograma" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="546dp"
            android:layout_height="56dp"
            android:background="@drawable/back_background"
            android:gravity="center"
            android:text="Configuração Trichogramma"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:circularflow_radiusInDP="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardViewCotecia"
            app:layout_constraintVertical_bias="0.041" />

            <RelativeLayout
                android:id="@+id/button4"
                android:layout_width="128dp"
                android:layout_height="181dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/back_background"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button5"
                app:layout_constraintStart_toEndOf="@+id/button6_layout"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.211">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/icon_slider_horizontal" />

                <TextView
                    android:id="@+id/title_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="Dados da aplicação"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/subtitle_text2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_text2"
                    android:layout_centerHorizontal="true"
                    android:text="Faixa, razão e velocidad"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />
            </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>